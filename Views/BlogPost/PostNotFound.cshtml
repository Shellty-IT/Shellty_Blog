@{
    ViewData["Title"] = "Post Not Found";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-6 text-center">
        <i class="bi bi-search" style="font-size: 5rem; color: var(--sky);"></i>
        <h1 class="fw-bold mt-3 mb-3">Post Not Found</h1>
        <p class="text-muted mb-4">
            Sorry, the post you're looking for doesn't exist or has been removed.
        </p>
        <div class="d-flex gap-2 justify-content-center">
            <a asp-controller="BlogPost" asp-action="Posts" class="btn btn-primary">
                <i class="bi bi-journals"></i> View All Posts
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-house"></i> Go Home
            </a>
        </div>
    </div>
</div>