@model Shellty_Blog.Models.BlogPost

@{
    ViewData["Title"] = Model.Title;
    var words = Model.Content.Split(' ', StringSplitOptions.RemoveEmptyEntries).Length;
    var readTime = Math.Max(1, (int)Math.Ceiling(words / 200.0));
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="BlogPost" asp-action="Posts">All Posts</a></li>
        <li class="breadcrumb-item active">@Model.Title</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <article>
            <header class="mb-4">
                <h1 class="fw-bold mb-3">@Model.Title</h1>
                <div class="d-flex flex-wrap align-items-center gap-3 post-meta-item">
                    <span>
                        <i class="bi bi-calendar3"></i>
                        @Model.CreatedDate.ToString("MMMM dd, yyyy 'at' h:mm tt")
                    </span>
                    <span>
                        <i class="bi bi-clock"></i> @readTime min read
                    </span>
                    @if (!string.IsNullOrEmpty(Model.Category))
                    {
                        <span class="badge badge-category">@Model.Category</span>
                    }
                </div>
                @if (Model.ModifiedDate.HasValue)
                {
                    <small class="text-muted d-block mt-2">
                        <i class="bi bi-pencil"></i> Last updated: @Model.ModifiedDate.Value.ToString("MMMM dd, yyyy")
                    </small>
                }
            </header>

            <hr />

            <div class="post-content my-4">
                @Html.Raw(Model.Content.Replace("\n", "<br>"))
            </div>

            <hr />

            <div class="d-flex gap-2 mt-4">
                <a asp-action="EditPost" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </article>

        <div class="d-flex justify-content-between mt-5 pt-3 border-top">
            <a asp-controller="BlogPost" asp-action="Posts" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> All Posts
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-house"></i> Home
            </a>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle text-danger"></i> Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>"@Model.Title"</strong>?</p>
                <p class="text-muted mb-0">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a asp-action="DeletePost" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </div>
        </div>
    </div>
</div>