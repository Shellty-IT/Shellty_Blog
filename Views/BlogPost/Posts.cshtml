@model IEnumerable<Shellty_Blog.Models.BlogPost>

@{
    ViewData["Title"] = "All Posts";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="section-title">All Posts</h1>
    <a asp-controller="BlogPost" asp-action="CreatePost" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Write New Post
    </a>
</div>

<p class="text-muted mb-3">
    <i class="bi bi-file-earmark-text"></i> @Model.Count() posts found
    @if (!string.IsNullOrEmpty(ViewBag.SelectedCategory as string))
    {
        <span>in category <strong>@ViewBag.SelectedCategory</strong></span>
    }
</p>

@{
    var categories = ViewBag.Categories as List<string>;
}
@if (categories != null && categories.Any())
{
    <div class="category-filter mb-4">
        <a asp-action="Posts"
           class="btn btn-sm @(string.IsNullOrEmpty(ViewBag.SelectedCategory as string) ? "btn-active" : "btn-outline-secondary")">
            All
        </a>
        @foreach (var cat in categories)
        {
            <a asp-action="Posts" asp-route-category="@cat"
               class="btn btn-sm @((ViewBag.SelectedCategory as string) == cat ? "btn-active" : "btn-outline-secondary")">
                @cat
            </a>
        }
    </div>
}

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-journal-x" style="font-size: 3rem; color: var(--sky);"></i>
        <p class="mt-3 text-muted">No posts found. Be the first to write something!</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-12 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h4 class="card-title mb-1">
                                    <a asp-controller="BlogPost" asp-action="Post" asp-route-id="@post.Id">
                                        @post.Title
                                    </a>
                                </h4>
                                <p class="post-meta-item mb-2">
                                    <i class="bi bi-calendar3"></i> @post.CreatedDate.ToString("MMMM dd, yyyy")
                                    @if (!string.IsNullOrEmpty(post.Category))
                                    {
                                        <span class="badge badge-category ms-2">@post.Category</span>
                                    }
                                    @{
                                        var words = post.Content.Split(' ', StringSplitOptions.RemoveEmptyEntries).Length;
                                        var readTime = Math.Max(1, (int)Math.Ceiling(words / 200.0));
                                    }
                                    <span class="ms-2 reading-time">
                                        <i class="bi bi-clock"></i> @readTime min read
                                    </span>
                                </p>
                                <p class="card-text text-muted mb-0">
                                    @{
                                        var excerpt = post.Content.Length > 200
                                            ? post.Content.Substring(0, 200) + "..."
                                            : post.Content;
                                    }
                                    @excerpt
                                </p>
                            </div>
                            <a asp-controller="BlogPost" asp-action="Post" asp-route-id="@post.Id"
                               class="btn btn-outline-primary btn-sm ms-3 flex-shrink-0">
                                Read <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}