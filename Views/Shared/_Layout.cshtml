<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shellty Blog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shellty_Blog.styles.css" asp-append-version="true" />
</head>
<body>

    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-custom">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/my.png" alt="Logo" style="height: 48px; margin-right: 0px;" />
                    Shellty Blog
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "BlogPost" && currentAction == "Posts" ? "active" : "")"
                               asp-controller="BlogPost" asp-action="Posts">
                                <i class="bi bi-journals"></i> Posts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "BlogPost" && currentAction == "CreatePost" ? "active" : "")"
                               asp-controller="BlogPost" asp-action="CreatePost">
                                <i class="bi bi-pencil-square"></i> Write
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Privacy" ? "active" : "")"
                               asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check"></i> Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="page-wrapper">
        <div class="container">
            <main role="main" class="py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer-custom">
        <div class="container text-center">
            <p class="mb-1">
                &copy; 2026 Shellty Blog — Made with <i class="bi bi-heart-fill text-danger"></i> for shells
            </p>
            <p class="mb-0">
                <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>