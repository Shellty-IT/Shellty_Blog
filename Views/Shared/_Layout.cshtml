@using Microsoft.AspNetCore.Identity
@inject SignInManager<Shellty_Blog.Models.ApplicationUser> SignInManager
@inject UserManager<Shellty_Blog.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shellty Blog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shellty_Blog.styles.css" asp-append-version="true" />
</head>
<body>

    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-custom">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/my.png" alt="Logo" style="height: 48px; margin-right: 0px;" />
                    Shellty Blog
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "BlogPost" && currentAction == "Posts" ? "active" : "")"
                               asp-controller="BlogPost" asp-action="Posts">
                                <i class="bi bi-journals"></i> Posts
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "BlogPost" && currentAction == "CreatePost" ? "active" : "")"
                                   asp-controller="BlogPost" asp-action="CreatePost">
                                    <i class="bi bi-pencil-square"></i> Write
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Privacy" ? "active" : "")"
                               asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check"></i> Privacy
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @UserManager.GetUserAsync(User).Result?.DisplayName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Requests">
                                                <i class="bi bi-shield-lock"></i> Admin Panel
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="RequestAdmin">
                                                <i class="bi bi-shield-plus"></i> Request Admin
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                    }
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Account" && currentAction == "Login" ? "active" : "")"
                                   asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Account" && currentAction == "Register" ? "active" : "")"
                                   asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="page-wrapper">
        <div class="container">
            <main role="main" class="py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer-custom">
        <div class="container text-center">
            <p class="mb-1">
                &copy; 2026 Shellty Blog — Made with <i class="bi bi-heart-fill text-danger"></i> for shells
            </p>
            <p class="mb-0">
                <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>