@model IEnumerable<Shellty_Blog.Models.BlogPost>

@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="d-flex align-items-center justify-content-center gap-3 mb-3">
        <img src="~/my.png" alt="Logo" style="height: 80px;" />
        <h1 class="mb-0">Welcome to Shellty Blog</h1>
    </div>
    <p>Your journey into the world of feline adventures begins here!</p>
    <a asp-controller="BlogPost" asp-action="CreatePost" class="btn btn-light btn-lg">
        <i class="bi bi-pencil-square"></i> Create New Post
    </a>
</div>

<section>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title">Recent Posts</h2>
        <a asp-controller="BlogPost" asp-action="Posts" class="btn btn-outline-primary">
            View All Posts <i class="bi bi-arrow-right"></i>
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var post in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            @if (!string.IsNullOrEmpty(post.Category))
                            {
                                <span class="badge badge-category mb-2 align-self-start">@post.Category</span>
                            }
                            <h5 class="card-title fw-bold">
                                <a asp-controller="BlogPost" asp-action="Post" asp-route-id="@post.Id">
                                    @post.Title
                                </a>
                            </h5>
                            <p class="post-meta-item mb-2">
                                <i class="bi bi-calendar3"></i> @post.CreatedDate.ToString("MMM dd, yyyy")
                                @{
                                    var words = post.Content.Split(' ', StringSplitOptions.RemoveEmptyEntries).Length;
                                    var readTime = Math.Max(1, (int)Math.Ceiling(words / 200.0));
                                }
                                <span class="ms-2">
                                    <i class="bi bi-clock"></i> @readTime min read
                                </span>
                            </p>
                            <p class="card-text flex-grow-1">
                                @{
                                    var preview = post.Content.Length > 120
                                        ? post.Content.Substring(0, 120) + "..."
                                        : post.Content;
                                }
                                @preview
                            </p>
                            <a asp-controller="BlogPost" asp-action="Post" asp-route-id="@post.Id"
                               class="btn btn-primary btn-sm mt-auto align-self-start">
                                Read More <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-journal-x" style="font-size: 3rem; color: var(--sky);"></i>
            <p class="mt-3 text-muted">No posts yet. Create your first post to get started!</p>
        </div>
    }
</section>