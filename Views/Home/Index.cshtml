@model IEnumerable<PurrfectBlog.Models.BlogPost>

@{
    ViewData["Title"] = "Home";
}

<div style="text-align: center; padding: 50px;">
    <h1>Welcome to Purrfect Blog 🐱</h1>
    <p>Your journey into the world of feline adventures begins here!</p>
    <a asp-controller="BlogPost" asp-action="CreatePost" class="btn btn-primary">Create New Post</a>
</div>

<section class="mt-5 pt-4 border-top">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Recent Blog Posts</h2>
        <a asp-controller="BlogPost" asp-action="Posts" class="btn btn-outline-primary">
            View All Posts →
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var post in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@post.Title</h5>
                            
                            <p class="text-muted small mb-2">
                                @post.CreatedDate.ToString("MMM dd, yyyy")
                                @if (!string.IsNullOrEmpty(post.Category))
                                {
                                    <span class="badge bg-secondary ms-1">@post.Category</span>
                                }
                            </p>

                            <p class="card-text flex-grow-1">
                                @{
                                    var preview = post.Content.Length > 120 
                                        ? post.Content.Substring(0, 120) + "..." 
                                        : post.Content;
                                }
                                @preview
                            </p>

                            <a asp-controller="BlogPost" asp-action="Post" asp-route-id="@post.Id" 
                               class="btn btn-sm btn-primary mt-auto">
                                Read More
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-light border">
            <p class="mb-0 text-center">No posts yet. Create your first post to get started!</p>
        </div>
    }
</section>